@page
@model SectionJLab.Pages.PastOrdersModel
@{
    ViewData["Title"] = "Past Orders";
}
<h1>Past Orders</h1>

<table class="table rounded-table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer Name</th>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.PastOrders)
        {
            <tr>
                <td>@order.ID</td>
                <td>@order.FirstName @order.LastName</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                <td>$@order.TotalAmount.ToString("F2")</td>
                <td>
                    <a asp-page="./OrderDetails" asp-route-id="@order.ID" class="btn btn-sm btn-primary">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
