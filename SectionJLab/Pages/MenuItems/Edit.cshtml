@page
@model SectionJLab.Pages.MenuItems.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>MenuItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MenuItem.ID" />
            <div class="form-group">
                <label asp-for="MenuItem.Name" class="control-label"></label>
                <input asp-for="MenuItem.Name" class="form-control" />
                <span asp-validation-for="MenuItem.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MenuItem.Description" class="control-label"></label>
                <input asp-for="MenuItem.Description" class="form-control" />
                <span asp-validation-for="MenuItem.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MenuItem.Price" class="control-label"></label>
                <input asp-for="MenuItem.Price" class="form-control" />
                <span asp-validation-for="MenuItem.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MenuItem.Picture" class="control-label"></label>
                @* <input asp-for="MenuItem.Picture" class="form-control" /> *@
                <input type="file" name="MenuItem.Picture" class="form-control" />
                <span asp-validation-for="MenuItem.Picture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MenuItem.Quantity" class="control-label"></label>
                <input asp-for="MenuItem.Quantity" class="form-control" />
                <span asp-validation-for="MenuItem.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
