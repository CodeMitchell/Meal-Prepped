@page
@model SectionJLab.Pages.MenuItems.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Add meals to your cart!</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-page="Create">Create New</a>
    </p>

}

<div class="row">
    @foreach (var item in Model.MenuItem)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="~/images/@item.Picture" alt="Pic" class="card-img-top" width="100" height="100" />
                <div class="card-body">
                    <h5 class="text-center" class="card-title">@item.Name</h5>
                    <p class="card-text"><strong>Description:</strong> @item.Description</p>
                    <p class="card-text"><strong>Price:</strong> $@item.Price.ToString("F2")</p>
                    @* <p class="card-text"><strong>Quantity:</strong> @item.Quantity</p> *@

                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-page="./Edit" asp-route-id="@item.ID" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-page="./Delete" asp-route-id="@item.ID" class="btn btn-danger btn-sm">Delete</a>
                        <a asp-page="./Details" asp-route-id="@item.ID" class="btn btn-info btn-sm">Details</a>
                    }
                    <div class="d-flex flex-column align-items-center">

                        <form method="post" asp-page-handler="AddToCart" class="d-inline">
                            <input type="hidden" name="ItemId" value="@item.ID" />
                            <button type="submit" class="btn btn-primary btn-lg">Add to Order</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
