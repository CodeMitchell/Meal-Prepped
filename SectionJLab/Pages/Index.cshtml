@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="text-center">
    <h1 style="font-size: 3rem; font-weight: bold; color: black; text-shadow: -1px -2px 4px rgba(255, 255, 255, 0.6);">
        Welcome to Meal Prepped
    </h1>
    <p style="font-size: 1.5rem; font-weight: 500; color: black; text-shadow: 1px 1px 3px rgba(255, 255, 255, 0.6);">
        Delicious, nutritious, and ready-to-eat meals delivered to your door.
    </p>
</div>

<div class="container mt-5">
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow">
                <div class="card-body">
                    <h3 class="card-title">Fresh Ingredients</h3>
                    <p class="card-text">We use locally sourced, high-quality ingredients to prepare your meals with care and flavor in mind.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow">
                <div class="card-body">
                    <h3 class="card-title">Balanced Meals</h3>
                    <p class="card-text">Each meal is crafted by our nutrition team to offer the right mix of protein, carbs, and healthy fats.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow">
                <div class="card-body">
                    <h3 class="card-title">No Hassle</h3>
                    <p class="card-text">Skip the shopping, prepping, and cooking. Just heat and enjoy your delicious meal in minutes.</p>
                </div>
            </div>
        </div>
    </div>

    

</div>
<div class="text-center mt-5">
    <p style="font-size: 1.5rem; font-weight: 500; color: black; text-shadow: 1px 1px 3px rgba(255, 255, 255, 0.6); margin-top: 20px;">
        Ready to start your journey towards healthier eating? Explore our menu, choose your meals, and have them delivered straight to your door.
        We make eating healthy simple, convenient, and delicious!
    </p>
</div>
<div class="text-center mt-4">
    <a href="/MenuItems/Index" class="btn btn-primary btn-lg">View Our Menu</a>
</div>
